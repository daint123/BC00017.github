{% block body %}
<table width="100%" border="1" style="border-collapse:collapse">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="product_taital">Our Products</h1>
        </div>
    </div>

    {% for sp in data %}
        {% if loop.index0 % 3 == 0 %}
            <tr>
        {% endif %}
        <td width="33%">
            <center>
                <b>{{ sp.name }}</b><br/>
                <img src="{{ asset('uploads/sanpham/' ~ sp.photo) }}" height="100px"><br/>
                {{ sp.price|number_format(0) }} VND
            </center>
            <form>
                <center>
                    <button type="submit" formmethod="post" formaction="{{path('app_cart_add',{'product_id':sp.getId()})}}" class="btn btn-primary btn-sm">Add to cart</button>
                </center>
                <center>
                    <a formmethod="post" href="{{path('app_product_detail',{'id':sp.getId()})}}" class="btn btn-warning">Detail</a>
                </center> 
            </form>

        {% if loop.index0 % 3 == 2 %}
            </td></tr>
        {% endif %}
    {% endfor %}

    {% if data|length % 3 != 0 %}
        </tr>
    {% endif %}
</table>
{% endblock %}  